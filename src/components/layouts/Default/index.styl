@import '~@/assets/style/init'

.app-container {
    .app-sider {
        height 100vh
        overflow-y auto
        box-shadow 2px 0 6px rgba(0,21,41,.35)

        .profile {
            .user {
                display flex
                flex-direction column
                align-items center
                padding 16px 24px
                color $white-color
                font-family Oleo Script
                text-shadow 1px 10px 10px rgba($black-color, .1)
                text-align center

                .avatar {
                    width 80px
                    height @width
                    margin-bottom 8px
                    border-radius 50%
                    border 2px solid $divider-color
                    box-shadow 1px 10px 10px rgba($black-color, .1)
                }

                .name {
                    margin-bottom 8px
                }

                .slogan {
                    color rgba($white-color, .65)
                    font-size 12px
                }
            }

            .action {
                display flex
                justify-content center
                margin 8px 0

                & > a {
                    display inline-block
                    width 36px
                    height @width
                    margin 0 8px
                    padding 8px
                    text-align center
                    border-radius 4px
                    transition background-color .3s $ease-out

                    &:hover {
                        background-color rgba($black-color, .1)
                    }

                    &.active {
                        background-color #2d8cf0
                    }
                }
            }
        }

        .menu {
        }
    }

    .app-header {
        z-index 999
        box-shadow 0 1px 4px rgba(0,21,41,.08)
        background-color $white-color
    }

    .app-content {
        margin $padding-lg
    }
}
