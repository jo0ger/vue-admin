@import '~@/assets/style/init'

.category-page {
    .create-btn {
        width 100%
        height 170px
        font-size 14px
    }
    
    .category-item {
        margin-bottom $padding-sm
    
        .action {
            display flex
            margin 0 -16px -16px
            border-top 1px solid $divider-color

            &-item {
                flex 1 1
                margin $padding-sm 0
                text-align center
                
                &:not(:last-child) {
                    border-right 1px solid $divider-color
                }

                .action-icon {
                    color rgba($black-color, .45)

                    &:hover {
                        color $primary-color
                    }
                }
            }
        }

        .description {
            height 40px
            margin-bottom $padding-md
            lineLimit(2)
        }
    }
}
